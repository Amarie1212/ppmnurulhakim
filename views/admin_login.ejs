<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Login Pengurus - Private Area</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
  
  <link rel="stylesheet" href="/styles.css" />
  <link rel="stylesheet" href="/duty.css" />
  <link rel="stylesheet" href="/form.css" />

  <style>
    /* LOCAL STYLES menggunakan Variabel dari duty.css */
    body {
      background-image: 
        var(--form-pattern, none),
        linear-gradient(to bottom, rgba(9, 9, 11, 0.7), rgba(9, 9, 11, 0.9)),
        url("/img/ppm.jpg");
      background-size: 32px 32px, cover;
      background-attachment: fixed;
      background-position: center;
      background-repeat: no-repeat;
      background-color: var(--bg); /* Fallback */
      color: var(--text);
      display: flex; align-items: center; justify-content: center;
      min-height: 100vh; margin: 0; 
      font-family: 'Inter', sans-serif;
      transition: background-color 0.3s, color 0.3s;
    }

    .admin-card {
      /* Gunakan bg-2 agar kontras dengan body (dot pattern) */
      /* Gunakan bg-2 agar kontras dengan body (dot pattern) */
      background: var(--bg-2);
      border: 1px solid var(--border);
      padding: 32px; border-radius: 16px;
      width: 100%; max-width: 400px;
      /* Shadow halus */
      box-shadow: 0 25px 50px rgba(0, 0, 0, 0.5);
      position: relative; z-index: 10;
      transition: background .3s, border-color .3s, box-shadow .3s;
      animation: loginModalPop 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }
    
    @keyframes loginModalPop {
      0% { transform: scale(0.9); opacity: 0; }
      100% { transform: scale(1); opacity: 1; }
    }

    .admin-title { 
      font-size: 1.5rem; font-weight: 700; text-align: center; 
      margin-bottom: 24px; color: var(--text); 
    }

    /* Override input styles untuk card ini */
    /* Override input styles untuk card ini */
    .input { 
      background: var(--bg); /* Match Santri Input */
      border: 1px solid var(--border); 
      color: var(--text); 
      width: 100%; margin-bottom: 12px; padding: 12px; border-radius: 8px;
    }
    :root[data-theme="light"] .input { background: var(--bg); }
    .input:focus { border-color: var(--accent); outline: none; }
    
    .label-text {
      display:block; margin-bottom:6px; font-size:0.9rem; color: var(--muted); font-weight: 600;
    }

    .btn-login {
      background: transparent;
      color: var(--accent);
      border: 1px solid var(--accent);
      font-weight: 700; width: 100%;
      padding: 12px; border-radius: 8px; 
      cursor: pointer; transition: 0.2s;
      margin-top: 8px;
    }
    .btn-login:hover { 
      background: var(--accent);
      color: #08110a;
      transform: translateY(-1px);
    }
  </style>
  <%- include('partials/notify') %>
</head>
<body>

  <button class="theme-fab" id="themeToggle" title="Ganti Tema">
    <svg class="icon sun-icon" viewBox="0 0 24 24">
       <path d="M12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.65 0-3 1.35-3 3s1.35 3 3 3 3-1.35 3-3-1.35-3-3-3zm0-2V4h.01M12 20v-3h.01M4 12h3.01M17 12h3.01M5.64 5.64l2.12 2.12M16.24 16.24l2.12 2.12M5.64 18.36l2.12-2.12M16.24 7.76l2.12-2.12"></path>
    </svg>
  </button>

  <div class="admin-card">
    <div class="admin-title">PPM Nurul Hakim</div>
    <div style="text-align: center; color: var(--muted); font-size: 0.85rem; margin-bottom: 32px; margin-top: -16px;">
      Akses Khusus Pengurus & Admin
    </div>

    <% if (typeof error !== 'undefined' && error) { %>
      <div class="notify notify-error">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><line x1="15" y1="9" x2="9" y2="15"/><line x1="9" y1="9" x2="15" y2="15"/></svg>
        <%= error %>
      </div>
    <% } %>

    <form method="POST" action="/panel-admin/login" id="loginForm" onsubmit="return validateLoginForm()">
      <div style="margin-bottom:16px">
        <label class="label-text">Email Pengurus</label>
        <input type="email" name="email" id="loginEmail" class="input" required autofocus />
      </div>
      <div style="margin-bottom:16px">
        <label class="label-text">Password</label>
        <input type="password" name="password" id="loginPassword" class="input" required />
      </div>
      
      <!-- Validation Warning -->
      <div id="loginWarning" class="notify notify-error" style="display:none; margin-bottom: 16px;">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><line x1="12" y1="8" x2="12" y2="12"/><line x1="12" y1="16" x2="12.01" y2="16"/></svg>
        <span id="loginWarningText"></span>
      </div>
      
      <button type="submit" class="btn-login">MASUK PANEL</button>
    </form>
    <div style="text-align:center; margin-top:24px;">
      <a href="/" style="color:var(--muted); text-decoration:none; font-weight:500; font-size:0.9rem; transition:color 0.2s;" onmouseover="this.style.color='var(--accent)'" onmouseout="this.style.color='var(--muted)'">
        &larr; Kembali ke Beranda
      </a>
    </div>
  </div>

  <script>
    // Form Validation
    function validateLoginForm() {
      const warning = document.getElementById('loginWarning');
      const text = document.getElementById('loginWarningText');
      
      function showLoginWarning(msg) {
        text.textContent = msg;
        warning.style.display = 'flex';
      }
      
      warning.style.display = 'none';
      
      const email = document.getElementById('loginEmail').value.trim();
      const password = document.getElementById('loginPassword').value;
      
      // Check empty email
      if (!email) {
        showLoginWarning('Email harus diisi.');
        document.getElementById('loginEmail').focus();
        return false;
      }
      
      // Validate email format
      const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!emailPattern.test(email)) {
        showLoginWarning('Format email tidak valid. Contoh: nama@email.com');
        document.getElementById('loginEmail').focus();
        return false;
      }
      
      // Check empty password
      if (!password) {
        showLoginWarning('Password harus diisi.');
        document.getElementById('loginPassword').focus();
        return false;
      }
      
      return true;
    }
  </script>

  <script>
    (function() {
      // 1. Cek LocalStorage saat load
      const savedTheme = localStorage.getItem('theme');
      if (savedTheme === 'light') {
        document.documentElement.setAttribute('data-theme', 'light');
      }

      // 2. Event Listener Tombol
      const toggleBtn = document.getElementById('themeToggle');
      if(toggleBtn){
        toggleBtn.addEventListener('click', () => {
          toggleBtn.classList.add('spin'); // Efek putar
          setTimeout(() => toggleBtn.classList.remove('spin'), 500);

          const currentTheme = document.documentElement.getAttribute('data-theme');
          if (currentTheme === 'light') {
            document.documentElement.removeAttribute('data-theme');
            localStorage.setItem('theme', 'dark');
            // Update BG overlay for dark theme if needed (already handled by CSS usually)
          } else {
            document.documentElement.setAttribute('data-theme', 'light');
            localStorage.setItem('theme', 'light');
          }
        });
      }
    })();
  </script>

</body>
</html>

