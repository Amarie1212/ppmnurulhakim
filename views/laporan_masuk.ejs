<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %></title>
  
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="/styles.css" />
  <link rel="stylesheet" href="/duty.css" />
  
  <style>
    .page-header { margin-bottom: 32px; }
    .page-title { font-weight: 800; margin-bottom: 8px; }
    .page-sub { color: var(--muted); }
    
    .stats-row {
      display: flex;
      gap: 16px;
      flex-wrap: wrap;
      margin-bottom: 24px;
    }
    .stat-card {
      background: var(--bg-2);
      border: 1px solid var(--border);
      padding: 20px;
      border-radius: 4px;
      flex: 1;
      min-width: 140px;
    }
    .stat-card .value { font-size: 2rem; font-weight: 800; color: var(--accent); }
    .stat-card .label { font-size: 0.8rem; color: var(--muted); margin-top: 4px; }
    
    .report-card {
      background: var(--bg-2);
      border: 1px solid var(--border);
      border-radius: 4px;
      padding: 24px;
      margin-bottom: 20px;
    }
    
    .report-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 16px;
      flex-wrap: wrap;
      gap: 12px;
    }
    .report-periode {
      font-size: 1.2rem;
      font-weight: 700;
    }
    .report-meta {
      font-size: 0.85rem;
      color: var(--muted);
      margin-top: 4px;
    }
    
    .status-badge {
      padding: 6px 14px;
      border-radius: 4px;
      font-size: 0.8rem;
      font-weight: 700;
      text-transform: uppercase;
    }
    .status-verified { background: rgba(34, 197, 94, 0.15); color: #22c55e; }
    
    .report-stats {
      display: flex;
      gap: 24px;
      flex-wrap: wrap;
    }
    .stat-item {
      background: var(--bg);
      padding: 12px 20px;
      border-radius: 4px;
      border: 1px solid var(--border);
    }
    .stat-value { font-size: 1.5rem; font-weight: 800; color: var(--accent); }
    .stat-label { font-size: 0.8rem; color: var(--muted); }
    
    .empty-state {
      text-align: center;
      padding: 60px 20px;
      color: var(--muted);
    }
    .empty-state svg { width: 80px; height: 80px; opacity: 0.3; margin-bottom: 16px; }
    
    /* Improved Table Styling */
    .table-card {
      padding: 0;
      overflow: hidden;
    }
    .table {
      width: 100%;
      border-collapse: collapse;
      background: var(--bg-2);
    }
    .table thead {
      background: var(--bg-3);
    }
    :root[data-theme="light"] .table thead {
      background: #f8fafc;
    }
    .table th {
      padding: 16px 20px;
      text-align: left;
      font-size: 0.75rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      color: var(--muted);
      border-bottom: 2px solid var(--border);
    }
    .table td {
      padding: 16px 20px;
      vertical-align: middle;
      border-bottom: 1px solid var(--border);
      color: var(--text);
    }
    .table tr:last-child td { border-bottom: none; }
    
    /* Mobile responsive */
    @media (max-width: 768px) {
      .page-header { 
        flex-direction: column; 
        align-items: stretch !important; 
        gap: 16px; 
        margin-bottom: 20px !important;
      }
      .page-title { font-size: 1.3rem !important; }
      .page-sub { font-size: 0.85rem; }
      .btn-export { width: 100%; justify-content: center; }
      
      .stats-row { gap: 10px; }
      .stat-card { padding: 14px; min-width: 100px; }
      .stat-card .value { font-size: 1.5rem; }
      .stat-card .label { font-size: 0.7rem; }
      
      .table-card { 
        overflow-x: auto;
        border-radius: var(--radius-md);
      }
      .table {
        min-width: 600px;
      }
      .table th, .table td {
        font-size: 0.85rem !important;
        padding: 14px 12px !important;
      }
      
      .bukti-thumb {
        width: 45px !important;
        height: 45px !important;
      }
    }
    
    @media (max-width: 480px) {
      .table { min-width: 500px; }
      .table th, .table td { font-size: 0.8rem !important; padding: 12px 10px !important; }
    }
  </style>
</head>
<body>

<header class="navbar">
  <div class="container nav-inner">
    <div class="brand-wrap">
      <a href="/pengurus/home" class="btn-back-inline" title="Kembali">
        <svg class="icon" viewBox="0 0 24 24"><path d="M19 12H5M12 19l-7-7 7-7"/></svg>
      </a>
      <div class="brand">Laporan Pembayaran Masuk</div>
    </div>
    <div class="right-actions">
      <button id="navToggle" class="nav-toggle" style="display:flex !important;" aria-label="Menu">
        <div class="bar"></div><div class="bar"></div><div class="bar"></div>
      </button>
    </div>
  </div>
</header>

<%- include('partials/pengurus_sidebar', { currentPage: 'laporan-masuk', user: user, stat: null }) %>

<main class="section">
  <div class="container">


    <% if(!pembayaran || pembayaran.length === 0) { %>
      <div class="empty-state">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        <h4>Belum ada pembayaran</h4>
        <p>Belum ada pembayaran yang diverifikasi</p>
      </div>
    <% } else { %>
      <div class="card table-card">
        <table class="table">
          <thead>
            <tr>
              <th style="text-align:center" width="60">No</th>
              <th>Nama Santri</th>
              <th>Tanggal Dikirim</th>
              <th style="text-align:center" width="150">Bukti Pembayaran</th>
            </tr>
          </thead>
          <tbody>
            <% pembayaran.forEach((p, i) => { %>
              <tr>
                <td style="text-align:center; color:var(--muted); font-size:0.9rem"><%= i + 1 %></td>
                <td style="font-weight:700"><%= p.nama_santri %></td>
                <td style="color:var(--muted); font-size:0.85rem"><%= p.tanggal_upload %></td>
                <td style="text-align:center">
                  <div style="width:50px; height:50px; border-radius:8px; overflow:hidden; border:1px solid var(--border); background:var(--bg); margin:0 auto;">
                    <img src="<%= p.bukti_path %>" alt="Bukti" style="width:100%; height:100%; object-fit:cover; cursor:pointer;" onclick="openZoom('<%= p.bukti_path %>')">
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>
</main>

<button id="themeFab" class="theme-fab"></button>

<script>
  // Image Zoom
  function openZoom(src) {
    const isDark = document.documentElement.getAttribute('data-theme') === 'dark';
    const bgColor = isDark ? 'rgba(0,0,0,0.95)' : 'rgba(0,0,0,0.9)';
    
    const modal = document.createElement('div');
    modal.style.cssText = 'position:fixed;inset:0;background:' + bgColor + ';display:flex;align-items:center;justify-content:center;z-index:9999;cursor:zoom-out;';
    modal.innerHTML = '<img src="' + src + '" style="max-width:90%;max-height:90%;object-fit:contain;border-radius:8px;box-shadow:0 10px 50px rgba(0,0,0,0.5);">';
    modal.onclick = () => modal.remove();
    document.body.appendChild(modal);
  }
</script>

<%- include('partials/pengurus_nav_script') %>

</body>
</html>


