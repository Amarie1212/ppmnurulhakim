<!-- Popup Menu untuk Pengurus (Mobile & Desktop) -->

<% if (user && user.role !== 'santri') { %>
  <style>
    /* Popup Menu Pengurus - Konsisten Mobile & Desktop */
    
    #pengurusMenu {
      display: none;
      position: fixed;
      z-index: 2005;
      background: var(--bg-2);
      border: 1px solid var(--border);
      box-shadow: 0 10px 40px rgba(0,0,0,0.2);
      flex-direction: column;
      top: calc(var(--nav-h) + 10px);
      right: 16px;
      border-radius: 12px;
      transform-origin: top right;
      transform: scale(0.97) translateY(-8px);
      opacity: 0;
      transition: transform .2s ease-out, opacity .15s ease;
      visibility: hidden;
      max-height: calc(100vh - var(--nav-h) - 30px);
      overflow-y: auto;
    }
    
    #pengurusMenu.open {
      visibility: visible;
      transform: scale(1) translateY(0);
      opacity: 1;
      display: flex;
      animation: pengurusPopIn .2s cubic-bezier(0.34, 1.56, 0.64, 1);
    }
    
    @keyframes pengurusPopIn {
      0% { transform: scale(0.97) translateY(-8px); opacity: 0; }
      100% { transform: scale(1) translateY(0); opacity: 1; }
    }
    
    #pengurusScrim {
      display: none;
      position: fixed;
      inset: 0;
      background: rgba(0, 0, 0, 0.4);
      z-index: 2004;
      opacity: 0;
      transition: opacity .2s;
    }
    
    #pengurusScrim.open {
      display: block;
      opacity: 1;
    }
    
    /* Menu Items */
    .admin-dd-head {
      padding: 16px;
      background: var(--bg-2);
      border-bottom: 1px solid var(--border);
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .admin-dd-title {
      font-weight: 800;
      font-size: 1rem;
      color: var(--text);
      letter-spacing: -0.02em;
    }
    
    .admin-dd-sub {
      font-size: 0.85rem;
      color: var(--muted);
      margin-top: 2px;
    }
    
    .admin-dd-item {
      padding: 12px 16px;
      font-size: 0.95rem;
      display: flex;
      align-items: center;
      justify-content: space-between;
      color: var(--text);
      text-decoration: none;
      border-bottom: 1px solid var(--border);
      transition: background 0.2s;
      line-height: 1.5;
    }
    
    .admin-dd-item:hover {
      background: var(--bg-3);
    }
    
    .admin-dd-item.danger {
      color: #ef4444;
    }
    
    .admin-dd-item.danger:hover {
      background: rgba(239, 68, 68, 0.05);
    }
    
    .header-dd-divider {
      height: 1px;
      background: var(--border);
    }
    
    /* Status Dot */
    .status-dot {
      width: 8px;
      height: 8px;
      background: #ef4444;
      border-radius: 50%;
      flex-shrink: 0;
    }
    
    /* Mobile: width 290px */
    @media (max-width: 768px) {
      #pengurusMenu {
        width: 290px;
      }
    }
    
    /* Desktop: width 320px */
    @media (min-width: 769px) {
      #pengurusMenu {
        width: 320px;
      }
      
      .admin-dd-title {
        font-size: 1.1rem;
      }
    }
  </style>

  <div id="pengurusMenu">
    <div class="admin-dd-head">
      <div>
        <div class="admin-dd-title">Menu Pengurus</div>
        <div class="admin-dd-sub">Halo, <%= user.name %> (<%= user.role.toUpperCase() %>)</div>
      </div>
    </div>
    
    <div style="flex: 1; overflow-y: auto;">
      <a class="admin-dd-item <%= currentPage === 'home' ? 'active' : '' %>" href="/pengurus/home">
        <div style="display:flex; align-items:center; gap:10px;">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
          Beranda Admin
        </div>
      </a>
      
      <a class="admin-dd-item" href="/">
        <div style="display:flex; align-items:center; gap:10px;">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18"><circle cx="12" cy="12" r="10"/><line x1="2" y1="12" x2="22" y2="12"/><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/></svg>
          Lihat Website
        </div>
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="14" height="14" style="opacity:0.5"><line x1="7" y1="17" x2="17" y2="7"/><polyline points="7 7 17 7 17 17"/></svg>
      </a>
      
      <div class="header-dd-divider"></div>
      
      <% if (user.role === 'admin' || user.role === 'panitia') { %>
        <a class="admin-dd-item <%= currentPage === 'santri' ? 'active' : '' %>" href="/pengurus">
          Data Santri
        </a>
      <% } %>
      
      <% if (user.role === 'admin' || user.role === 'panitia') { %>
        <a class="admin-dd-item <%= currentPage === 'verifikasi' ? 'active' : '' %>" href="/pengurus/verifikasi" style="display:flex; justify-content:space-between; align-items:center;">
          Verifikasi Pendaftaran
          <% if(typeof stat !== 'undefined' && stat && (stat.pending > 0 || stat.biodata_pending > 0)){ %>
            <div class="status-dot"></div>
          <% } %>
        </a>
      <% } %>
      
      <% if (user.role === 'keuangan') { %>
        <a class="admin-dd-item <%= currentPage === 'verif-bayar' ? 'active' : '' %>" href="/pengurus/verifikasi-pembayaran" style="display:flex; justify-content:space-between; align-items:center;">
          Verifikasi Pembayaran
          <% if(typeof stat !== 'undefined' && stat && stat.pending_payment > 0){ %>
            <div class="status-dot"></div>
          <% } %>
        </a>
      <% } %>
      
      <% if (user.role === 'keuangan') { %>
        <a class="admin-dd-item <%= currentPage === 'laporan-bayar' ? 'active' : '' %>" href="/pengurus/laporan-pembayaran">Laporan Pembayaran</a>
      <% } %>
      
      <% if (user.role === 'ketua') { %>
        <a class="admin-dd-item <%= currentPage === 'laporan-santri' ? 'active' : '' %>" href="/pengurus/laporan-santri">Laporan Data Santri</a>
        <a class="admin-dd-item <%= currentPage === 'laporan-masuk' ? 'active' : '' %>" href="/pengurus/laporan-masuk">Laporan Pembayaran Masuk</a>
      <% } %>
      
      <div class="header-dd-divider"></div>
      
      <% if (user.role === 'admin') { %>
        <a class="admin-dd-item <%= currentPage === 'akun' ? 'active' : '' %>" href="/pengurus/kelola-akun">Kelola Akun Pengurus</a>
      <% } %>
      
      <% if (user.role === 'admin' || user.role === 'panitia') { %>
        <a class="admin-dd-item <%= currentPage === 'kelola-pengumuman' ? 'active' : '' %>" href="/pengurus/kelola-pengumuman">Kelola Pengumuman</a>
      <% } %>
      
      <div class="header-dd-divider"></div>
      
      <a class="admin-dd-item danger" href="/logout">Logout</a>
    </div>
  </div>
  
  <div id="pengurusScrim"></div>
<% } %>
