<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %></title>
  
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="/styles.css" />
  <link rel="stylesheet" href="/duty.css" />
  
  <style>
    .stats-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-bottom: 32px; }
    .stat-card {
      background: var(--bg-2); border: 1px solid var(--border); border-radius: 12px; padding: 20px;
      text-align: center;
    }
    .stat-value { font-size: 2rem; font-weight: 800; color: var(--accent); }
    .stat-label { color: var(--muted); font-size: 0.85rem; text-transform: uppercase; letter-spacing: 0.5px; margin-top: 4px; }
    
    .stat-card.warning .stat-value { color: #eab308; }
    .stat-card.success .stat-value { color: #22c55e; }
    .stat-card.danger .stat-value { color: #ef4444; }
    
    .filter-bar {
      display: flex; gap: 12px; margin-bottom: 20px; flex-wrap: wrap;
    }
    .filter-input, .filter-select {
      padding: 10px 16px; border-radius: 8px; border: 1px solid var(--border);
      background: var(--bg); color: var(--text); font-size: 0.9rem;
    }
    .filter-input { flex: 1; min-width: 180px; }
    .filter-select { min-width: 150px; }
    .filter-input:focus, .filter-select:focus { border-color: var(--accent); outline: none; }
    
    .btn-action-sm {
      padding: 6px 12px; border-radius: 6px; font-size: 0.8rem; font-weight: 600;
      border: none; cursor: pointer; transition: all .2s;
    }
    .btn-verify { background: rgba(34, 197, 94, 0.15); color: #22c55e; }
    .btn-verify:hover { background: #22c55e; color: #000; }
    .btn-reject { background: rgba(239, 68, 68, 0.15); color: #ef4444; }
    .btn-reject:hover { background: #ef4444; color: #fff; }
    
    .status-badge {
      display: inline-block; padding: 4px 10px; border-radius: 6px; font-size: 0.75rem; font-weight: 700;
    }
    .status-pending { background: rgba(234, 179, 8, 0.15); color: #eab308; }
    .status-verified { background: rgba(34, 197, 94, 0.15); color: #22c55e; }
    .status-rejected { background: rgba(239, 68, 68, 0.15); color: #ef4444; }
    
    .page-title { margin-bottom: 24px; font-weight: 800; }
    .section-title { font-weight: 700; font-size: 1.1rem; margin-bottom: 16px; }
  </style>
</head>
<body>

<header class="navbar">
  <div class="container nav-inner">
    <div class="brand-wrap">
      <a href="/pengurus/home" class="btn-back-inline" title="Kembali ke Dashboard">
        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 18l-6-6 6-6"/></svg>
      </a>
      <div class="brand">Keuangan</div>
    </div>
    <div class="right-actions">
      <button id="navToggle" class="nav-toggle" style="display:flex !important;" aria-label="Menu">
        <div class="bar"></div><div class="bar"></div><div class="bar"></div>
      </button>
    </div>
  </div>
</header>

<%- include('partials/pengurus_sidebar', { currentPage: 'keuangan', user: user, stat: null }) %>

<main class="section">
  <div class="container">
    <div class="page-header">
      <h2 class="page-title">Manajemen Keuangan</h2>
    </div>

    <!-- Statistik -->
    <div class="stats-grid">
      <div class="stat-card warning">
        <div class="stat-value">12</div>
        <div class="stat-label">Menunggu Verifikasi</div>
      </div>
      <div class="stat-card success">
        <div class="stat-value">45</div>
        <div class="stat-label">Pembayaran Terverifikasi</div>
      </div>
      <div class="stat-card">
        <div class="stat-value">Rp 25.5 Jt</div>
        <div class="stat-label">Total Pemasukan</div>
      </div>
    </div>

    <!-- Filter -->
    <div class="filter-bar">
      <input type="text" class="filter-input" placeholder="Cari nama santri...">
      <select class="filter-select">
        <option value="">Semua Status</option>
        <option value="pending">Menunggu</option>
        <option value="verified">Terverifikasi</option>
        <option value="rejected">Ditolak</option>
      </select>
    </div>

    <!-- Tabel Pembayaran -->
    <div class="section-title">Daftar Pembayaran</div>
    <div class="card table-card">
      <table class="table">
        <thead>
          <tr>
            <th width="50">No</th>
            <th>Nama Santri</th>
            <th>Jumlah</th>
            <th>Tanggal</th>
            <th>Status</th>
            <% if (user.role === 'admin' || user.role === 'keuangan') { %>
            <th style="text-align:center">Aksi</th>
            <% } %>
          </tr>
        </thead>
        <tbody>
          <% if(laporan.length === 0){ %>
            <tr>
              <td colspan="6" style="text-align:center; padding:40px; color:var(--muted)">
                Belum ada data pembayaran.
              </td>
            </tr>
          <% } %>
          <% laporan.forEach((item, index) => { %>
            <tr>
              <td style="text-align:center; color:var(--muted)"><%= index + 1 %></td>
              <td style="font-weight:600"><%= item.nama_santri %></td>
              <td>Rp <%= item.jumlah?.toLocaleString('id-ID') || '-' %></td>
              <td style="color:var(--muted); font-size:0.85rem"><%= item.tanggal %></td>
              <td>
                <% if(item.status === 'Menunggu Verifikasi'){ %>
                  <span class="status-badge status-pending">Pending</span>
                <% } else if(item.status === 'Terverifikasi'){ %>
                  <span class="status-badge status-verified">Verified</span>
                <% } else { %>
                  <span class="status-badge status-rejected">Rejected</span>
                <% } %>
              </td>
              <% if (user.role === 'admin' || user.role === 'keuangan') { %>
              <td style="text-align:center">
                <% if(item.status === 'Menunggu Verifikasi'){ %>
                  <form action="/pengurus/keuangan/verify" method="POST" style="display:inline">
                    <input type="hidden" name="id" value="<%= item.id %>">
                    <button type="submit" class="btn-action-sm btn-verify">✓ ACC</button>
                  </form>
                  <form action="/pengurus/keuangan/reject" method="POST" style="display:inline; margin-left:6px">
                    <input type="hidden" name="id" value="<%= item.id %>">
                    <button type="submit" class="btn-action-sm btn-reject">✗ Tolak</button>
                  </form>
                <% } else { %>
                  <span style="color:var(--muted)">—</span>
                <% } %>
              </td>
              <% } %>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</main>

<button id="themeFab" class="theme-fab"></button>

<%- include('partials/pengurus_nav_script') %>

</body>
</html>


