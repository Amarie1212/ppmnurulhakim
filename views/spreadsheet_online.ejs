<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %></title>
  <link rel="icon" type="image/png" href="/favicon.png" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="/styles.css" />
  <link rel="stylesheet" href="/duty.css" />
  
  <%- include('partials/notify') %>

  <style>
    .page-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 16px;
      margin-bottom: 24px;
    }
    .page-title { font-size: 1.5rem; font-weight: 800; margin: 0; }
    .page-subtitle { color: var(--muted); font-size: 0.9rem; margin-top: 4px; }
    
    .sheet-container {
      background: var(--bg-2);
      border: 1px solid var(--border);
      border-radius: 12px;
      overflow: hidden;
      position: relative;
    }
    .sheet-frame {
      width: 100%;
      height: 75vh;
      min-height: 500px;
      border: none;
    }
    .sheet-loading {
      position: absolute;
      inset: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      background: var(--bg-2);
      color: var(--muted);
      font-size: 0.9rem;
    }
    .sheet-loading.hidden { display: none; }
    
    .btn-open {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 10px 16px;
      background: var(--accent);
      color: #000;
      font-weight: 700;
      border: none;
      border-radius: 10px;
      cursor: pointer;
      text-decoration: none;
      font-size: 0.9rem;
      transition: all 0.2s;
    }
    .btn-open:hover { filter: brightness(1.1); transform: translateY(-1px); }
    .btn-open svg { width: 18px; height: 18px; }
    
    .info-box {
      background: rgba(34, 197, 94, 0.1);
      border: 1px solid rgba(34, 197, 94, 0.3);
      border-radius: 10px;
      padding: 14px 18px;
      margin-bottom: 20px;
      display: flex;
      align-items: flex-start;
      gap: 12px;
      font-size: 0.9rem;
      color: var(--text);
    }
    .info-box svg { width: 20px; height: 20px; flex-shrink: 0; color: var(--accent); margin-top: 2px; }
    
    .sheet-badge {
      display: inline-block;
      padding: 4px 12px;
      border-radius: 20px;
      font-size: 0.8rem;
      font-weight: 700;
      margin-left: 8px;
    }
    .badge-santri { background: #3b82f6; color: white; }
    .badge-pembayaran { background: #22c55e; color: white; }
  </style>
</head>
<body>

<%
  // Tentukan sheet berdasarkan role
  const SHEET_ID = '1SRLwhV46aQZ52BQRnoipTFR0S9hm0NGV8EfpOZEkWVU';
  let sheetGid = '0'; // Default: Sheet 1 (Santri)
  let sheetName = 'Laporan Santri';
  let sheetBadgeClass = 'badge-santri';
  
  if (user.role === 'keuangan') {
    sheetGid = '1'; // Sheet 2 (Pembayaran) - ganti dengan gid yang benar jika berbeda
    sheetName = 'Laporan Pembayaran';
    sheetBadgeClass = 'badge-pembayaran';
  }
  
  const sheetUrl = `https://docs.google.com/spreadsheets/d/${SHEET_ID}/edit#gid=${sheetGid}`;
  const embedUrl = `https://docs.google.com/spreadsheets/d/${SHEET_ID}/edit?rm=minimal#gid=${sheetGid}`;
%>

<header class="navbar">
  <div class="container nav-inner">
    <div class="brand-wrap">
      <a href="/pengurus/home" class="btn-back-inline" title="Kembali ke Dashboard">
        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 18l-6-6 6-6"/></svg>
      </a>
      <div class="brand">Spreadsheet Online</div>
    </div>
    <div class="right-actions">
      <button id="navToggle" class="nav-toggle" style="display:flex !important;" aria-label="Menu">
        <div class="bar"></div><div class="bar"></div><div class="bar"></div>
      </button>
    </div>
  </div>
</header>

<%- include('partials/pengurus_sidebar', { currentPage: 'spreadsheet', user: user, stat: null }) %>

<main class="section">
  <div class="container">
    <div class="page-header">
      <div>
        <h2 class="page-title">
          ðŸ“Š Spreadsheet Online
          <span class="sheet-badge <%= sheetBadgeClass %>"><%= sheetName %></span>
        </h2>
        <p class="page-subtitle">Edit dan lihat data langsung di Google Sheets</p>
      </div>
      <a href="<%= sheetUrl %>" target="_blank" class="btn-open">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
          <polyline points="15 3 21 3 21 9"/>
          <line x1="10" y1="14" x2="21" y2="3"/>
        </svg>
        Buka di Tab Baru
      </a>
    </div>

    <div class="info-box">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="12" cy="12" r="10"/>
        <path d="M12 16v-4"/>
        <path d="M12 8h.01"/>
      </svg>
      <div>
        <strong>Anda melihat:</strong> <%= sheetName %>. 
        Klik "Buka di Tab Baru" untuk mengedit dengan fitur lengkap. 
        Login dengan akun Google yang sudah diberi akses.
      </div>
    </div>

    <div class="sheet-container">
      <div class="sheet-loading" id="sheetLoading">
        <span>Memuat spreadsheet...</span>
      </div>
      <iframe 
        class="sheet-frame" 
        id="sheetFrame"
        src="<%= embedUrl %>"
        onload="document.getElementById('sheetLoading').classList.add('hidden')"
      ></iframe>
    </div>
  </div>
</main>

<button id="themeFab" class="theme-fab"></button>

<%- include('partials/pengurus_nav_script') %>

</body>
</html>
